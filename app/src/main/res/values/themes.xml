<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal de la aplicación para el modo día -->
    <style name="Theme.WhereSee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color primario de la marca -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Variante del color primario (utilizado en la barra de estado, por ejemplo) -->
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Color que se mostrará sobre el color primario (por ejemplo, el texto sobre botones primarios) -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color secundario de la marca -->
        <item name="colorSecondary">@color/primaryDarkColor</item>
        <!-- Variante del color secundario -->
        <item name="colorSecondaryVariant">@color/primaryTextColor</item>
        <!-- Color sobre el secundario -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado (solo se aplica en versiones compatibles) -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema para pantallas relacionadas con películas (con acción oscura) -->
    <style name="Theme.WhereSeeFilm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color primario -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Variante del color primario -->
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Color sobre el primario -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color secundario -->
        <item name="colorSecondary">@color/primaryDarkColor</item>
        <!-- Variante del color secundario -->
        <item name="colorSecondaryVariant">@color/primaryTextColor</item>
        <!-- Color sobre el secundario -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Estilo para botones: define tamaño y fuente del texto -->
    <style name="EstiloBoton">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <!-- Estilo para campos de edición: define tamaño y fuente del texto -->
    <style name="EstiloEdit">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <!-- Tema alternativo sin ActionBar, útil para pantallas que no requieren barra de acción -->
    <style name="Theme.WhereSee.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
