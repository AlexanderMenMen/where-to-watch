<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/apk/res/tools">

    <!-- Tema principal para el modo nocturno con DarkActionBar -->
    <style name="Theme.WhereSee" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color primario -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Variante del color primario (utilizado en la barra de estado, por ejemplo) -->
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Color para el contenido que se muestre sobre el primario -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color secundario -->
        <item name="colorSecondary">@color/primaryDarkColor</item>
        <!-- Variante del color secundario -->
        <item name="colorSecondaryVariant">@color/primaryTextColor</item>
        <!-- Color para el contenido sobre el secundario -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Puedes personalizar aún más el tema agregando otros atributos aquí -->
    </style>

    <!-- Estilo para botones en modo nocturno -->
    <style name="EstiloBoton">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <!-- Estilo para campos de edición en modo nocturno -->
    <style name="EstiloEdit">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

</resources>
